rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // üîì Public read access for blog collections
    match /web_dev_collection/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "kkvasan99@gmail.com";
    }

    match /game_dev_collection/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "kkvasan99@gmail.com";
    }

    match /editing_collection/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "kkvasan99@gmail.com";
    }

    match /visual_effects_collection/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == "kkvasan99@gmail.com";
    }

    // ‚úçÔ∏è Restrict write access for projects or other sensitive areas
    match /projects/{docId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
